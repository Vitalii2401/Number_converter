<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NumberConverter" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_green_dt</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_green_dt</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttonNumber">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/color_light_dt</item>
    </style>

    <style name="buttonBackspace" parent="buttonNumber">
        <item name="android:tint">@color/color_light_dt</item>
    </style>

    <style name="buttonLetter" parent="buttonNumber">
        <item name="android:textColor">@color/color_primary_green_dt</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="buttonNumberInactive" parent="buttonNumber">
        <item name="android:textColor">@color/color_inactive_number_dt</item>
    </style>

    <style name="buttonLetterInactive" parent="buttonNumber">
        <item name="android:textColor">@color/color_inactive_letter_green_dt</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="textNumberSystem">
        <item name="android:textColor">@color/color_light_dt</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="accentTextNumberSystem" parent="textNumberSystem">
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="textAnswer">
        <item name="android:textColor">@color/color_primary_green_dt</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="accentTextAnswer" parent="textAnswer">
        <item name="android:textColor">@color/color_primary_variant_green_dt</item>
    </style>

    <style name="dot">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="solutionsButton">
        <item name="android:backgroundTint">@color/color_primary_green_dt</item>
        <item name="android:textColor">@color/color_light_dt</item>
    </style>

    <style name="inactiveSolutionsButton">
        <item name="android:backgroundTint">@color/color_inactive_letter_green_dt</item>
        <item name="android:textColor">@color/inactive_white</item>
    </style>

    <style name="solutionsView">
        <item name="android:background">@color/color_primary_green_dt</item>
    </style>

    <style name="inactiveSolutionsView">
        <item name="android:background">@color/color_inactive_letter_green_dt</item>
    </style>

</resources>